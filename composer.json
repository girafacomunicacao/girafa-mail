{
    "name": "girafa/mail",
	"type": "library",
    "description": "Integration of Amazon SES service in the Zend Frameword Zend\\Mail",
    "license": "MIT",
    "keywords": [
        "zf2",
        "email",
        "aws",
        "aws ses",
        "mailgun"
    ],
    "authors": [
        {
            "name": "Girafa Comunicacao",
			"email": "silver@girafacomunicacao.com.br",
			"role": "Developer",
			"homepage": "http://girafacomunicacao.com.br"
        }
    ],
    "require": {
        "php": ">=5.4",
        "zendframework/zend-mail": "~2.0"
    },
    "require-dev": {
        "zendframework/zendframework": "~2.0",
        "aws/aws-sdk-php-zf2": ">=1.0.1"       
    },
    "suggest": {
        "slm/mail": "If you need to use Mailgun",
        "aws/aws-sdk-php-zf2": "If you need to use Amazon SES"
    },
    "autoload": { 
        "psr-0": {
            "Girafa\\Mail": "src/"
        },
        "classmap": [
            "./Module.php"
        ]
    }
}